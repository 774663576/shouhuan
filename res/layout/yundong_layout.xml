<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- android:background="#00BBA7" -->

    <com.db.chart.view.LineChartView
        xmlns:chart="http://schemas.android.com/apk/res-auto"
        android:id="@+id/linechart"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_above="@+id/button1"
        android:layout_marginBottom="10dip"
        android:layout_marginTop="7dp"
        android:background="#ffffff"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        chart:chart_axisBorderSpacing="0dp"
        chart:chart_axisColor="@color/axis"
        chart:chart_labelColor="@color/label"
        chart:chart_typeface="Roboto-Regular.ttf" >
    </com.db.chart.view.LineChartView>

    <Button
        android:id="@+id/button1"
        android:layout_width="2000dip"
        android:layout_height="0dip"
        android:layout_alignParentBottom="true" />

    <RelativeLayout
        android:id="@+id/layout_tishi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linechart"
        android:layout_marginBottom="5dip"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="5dip"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/img_tishi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/step_small" />

        <TextView
            android:id="@+id/txt_tishi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/current_img"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:layout_toRightOf="@+id/img_tishi"
            android:text="步数"
            android:textColor="@color/yellow"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dip"
            android:src="@drawable/img_buletooth" />

        <TextView
            android:id="@+id/txt_connect_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:layout_toLeftOf="@+id/imageView1"
            android:textColor="@color/black"
            android:textSize="15sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/layout_tishi" >

        <RelativeLayout
            android:id="@+id/layout_step"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dip" >

            <ImageView
                android:id="@+id/img_step"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/img_step_selector" />

            <TextView
                android:id="@+id/txt_step"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:paddingTop="20dip"
                android:text="2010"
                android:textColor="@color/color_selector"
                android:textSize="11sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/layout_step"
            android:layout_marginRight="10dp" >

            <ImageView
                android:id="@+id/img_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_time_selector" />

            <TextView
                android:id="@+id/txt_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:paddingTop="20dip"
                android:text="2010"
                android:textColor="@color/color_selector"
                android:textSize="11sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_kaluli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/layout_step"
            android:layout_below="@+id/layout_step"
            android:layout_marginTop="36dp" >

            <ImageView
                android:id="@+id/img_kaluli"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/img_kaluli_selector" />

            <TextView
                android:id="@+id/txt_kaluli"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:paddingTop="20dip"
                android:text="2010"
                android:textColor="@color/color_selector"
                android:textSize="11sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_juli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/layout_time"
            android:layout_alignTop="@+id/layout_kaluli" >

            <ImageView
                android:id="@+id/img_juli"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/img_juli_selector" />

            <TextView
                android:id="@+id/txt_juli"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:paddingTop="20dip"
                android:text="2010"
                android:textColor="@color/color_selector"
                android:textSize="11sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true" >

            <ImageView
                android:id="@+id/current_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/steps_big" />

            <TextView
                android:id="@+id/txt_current_danwei"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/current_img"
                android:layout_centerHorizontal="true"
                android:paddingBottom="5dip"
                android:text="步数"
                android:textColor="@color/yellow"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txt_current_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dip"
                android:layout_toRightOf="@+id/current_img"
                android:text="0.0"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>